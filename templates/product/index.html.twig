{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}
<h1 class="m-5 text-center font">Nos spécialités</h1>


<div class="container">
<div class="row">
    {% for product in products %}
        <div class="col-md-4">
            {# {{ dump(products) }} #}
            <div class="m-5 zoom">
                <h4 class="font text-center">{{ product.name }}</h4>
                <img class="img-fluid" src="images/uploads/{{ product.illustration }}" alt="{{ product.name }}">
                <p>{{ product.description|raw }}</p>
                
            </div>
        </div>

    {% endfor %}
</div>
</div>

{% endblock %}
